<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabela</title>
    <link rel="stylesheet" href="public/style.css">
    <style>
        body {
            font-family: 'Ubuntu';
        }
        
        h2 {
            text-align: center;
        }
        
        table {
            border-collapse: collapse;
            font-size: 12pt;
            margin: auto;
            background-color: #fff;
        }

        table td, th {
            border-bottom: 1px solid #000;
            padding: 12px;
            cursor: default;
        }

        tbody tr:hover {
            background-color: #d4d4d4;
        }

        thead {
            background-color: #000000;
            color: #fff;
        }

        th {
            text-align: left;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="mt-2">Tabela convertida do Excel</h2>

        <table class="table table-bordered table-hover mt-3">
            <thead class="bg-dark text-light">
                <% header.forEach(col => { %>
                    <th> <%= col %> </th>
                <% }); %>
            </thead>
            <tbody>
                <% rows.forEach(row => { %>
                    <tr>
                        <% row.forEach(td => { %>
                            <td> <%= td %> </td>
                        <% }); %>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>